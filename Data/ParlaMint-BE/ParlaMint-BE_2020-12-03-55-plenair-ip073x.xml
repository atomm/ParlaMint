               <seg xml:id="ParlaMint-BE_2020-12-03-55-plenair-ip073x.seg976" xml:lang="fr">Oui</seg>
               <seg xml:id="ParlaMint-BE_2020-12-03-55-plenair-ip073x.seg977" xml:lang="nl">101</seg>
               <seg xml:id="ParlaMint-BE_2020-12-03-55-plenair-ip073x.seg978" xml:lang="nl">Ja</seg>
